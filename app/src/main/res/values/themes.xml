<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- tool bar or action bar -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- status bar -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <!-- circle on calendar color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="my_theme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/purple_200</item>
    </style>

    <style name="my_overlay_theme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/purple_500</item>
    </style>
</resources>